@model IEnumerable<MovieReservationSystem.Models.GetCinemas>

@{
    ViewBag.Title = "Cinemas";
}

<div class="form-group">
    <div class="card">
        <div class="card-header text-center">
            <h4 class="m-0">@ViewBag.Title</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover table-responsive align-middle m-0">
                <thead>
                    <tr>
                        <th width="80">
                            <button type="button" class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#aeCinema" data-action="add">
                                Add
                            </button>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.seat_count)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.default_price)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#aeCinema" data-action="edit" @item.disabled
                                        data-cinema_id="@item.cinema_id" data-description="@item.description" data-seat_count="@item.seat_count" data-default_price="@item.default_price">
                                    Edit
                                </button>
                            </td>
                            <td>
                                @item.description
                            </td>
                            <td class="text-end">
                                @item.seat_count
                            </td>
                            <td class="text-end">
                                @item.default_price
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Cinemas/aeCinema.cshtml")

