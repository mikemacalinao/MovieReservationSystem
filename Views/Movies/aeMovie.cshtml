<div class="modal fade" id="aeMovie" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1" aria-labelledby="aeMovieLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aeMovieLabel">Movie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formMovie" enctype="multipart/form-data" action="Movies/SaveMovie" method="post">
                <input type="hidden" name="movie_id" id="inputMovieID" value="0"/>
                <input type="hidden" name="imgtype" id="inputImgType" value=""/>
                <div class="modal-body">
                    <div class="row">
                        <div id="col1" class="col-md-6" style="display: none;">
                            <img id="imageView" class="img-fluid img-thumbnail" />
                        </div>
                        <div id="col2">
                            <div id="edit">
                                <div class="form-floating mb-2">
                                    <input type="text" class="form-control form-control-sm" id="inputTitle" name="title" autocomplete="off" placeholder="Title" maxlength="100">
                                    <label for="inputTitle">Title</label>
                                </div>
                                <div class="form-floating mb-2">
                                    <textarea class="form-control form-control-sm" placeholder="Leave a comment here" id="taDescription" style="height: 150px" name="description" autocomplete="off" maxlength="250"></textarea>
                                    <label for="taDescription">Description</label>
                                </div>
                                <div class="form-floating mb-2">
                                    <input type="number" min="0.00" step="0.01" value="0.00" class="form-control form-control-sm decimal" id="inputDefaultPrice" autocomplete="off" name="default_price" placeholder="Default Price">
                                    <label for="inputDefaultPrice">Default Price</label>
                                </div>
                            </div>
                            <div id="image">
                                <label for="inputImage" class="form-label">Image</label>
                                <input class="form-control form-control-sm" type="file" accept="image/*" id="inputImage" name="imgfile">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>